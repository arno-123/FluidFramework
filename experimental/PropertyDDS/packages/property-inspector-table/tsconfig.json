{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react",
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "../node_modules/@types",
    ],
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./custom.d.ts"
  ],
  "exclude": [
    "./src/**/*.stories.*"
  ]
}

